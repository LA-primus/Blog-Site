<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog Posts</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/main.css" />
  </head>
  <body>
    <%- include("partials/header.ejs")%>
    <div class="container">
      <% if (locals.userPosts.length>=1) { %>
      <% userPosts.forEach(post => {%>
      <h2 class="post-identifier mt-5 pb-2">Post <%= post.id %></h2>
      <p ><%= post.postContent %></p>
      <form method="post">
        <input id="editPost" type="submit" value="EDIT" formaction="/edit/<%=post.id%>">
        <input id="deletePost" type="submit" value="DELETE" formaction="/delete-post/<%=post.id%>">
      </form>
      <%}); %> <% } else{ %>
      <h1>You have no posts!</h1>
      <% } %>
    </div>
  </body>
</html>